<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoPlayerSnake.GUI"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TwoPlayerSnake.GUI.AppWindow"
        Title="AvaloniaAppTemplate"
        WindowStartupLocation="CenterScreen"
        Name="MainWindow">
  <DockPanel>
    <Border Width="400" 
            Height="400"
            Background="LightGray"
            DockPanel.Dock="Right">
      <local:GameView Name="GameView"/>
    </Border>
    <local:PlayerListView Name="PlayerListView" DockPanel.Dock="Top"/>
    <local:PlayerDataBox Name="PlayerDataBox" DockPanel.Dock="Bottom"/>
  </DockPanel>
</Window>
